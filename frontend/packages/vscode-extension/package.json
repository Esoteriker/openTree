{
  "name": "opentree-vscode",
  "displayName": "OpenTree",
  "description": "Capture AI dialogue in VS Code and sync to OpenTree backend.",
  "version": "0.1.0",
  "publisher": "opentree",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:opentree.captureSelection",
    "onCommand:opentree.showPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opentree.captureSelection",
        "title": "OpenTree: Capture Selection"
      },
      {
        "command": "opentree.showPanel",
        "title": "OpenTree: Show Suggestions"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "OpenTree",
      "properties": {
        "opentree.apiBaseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8101",
          "description": "Dialogue-service base URL"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.3"
  }
}
