# Copy to .env and adjust values for your environment.

# Service URLs
PARSER_SERVICE_URL=http://127.0.0.1:8102
GRAPH_SERVICE_URL=http://127.0.0.1:8103
SUGGESTION_SERVICE_URL=http://127.0.0.1:8104

# Tenant/auth
DEFAULT_TENANT_ID=public
AUTH_MODE=none
AUTH_REQUIRED=false
TENANT_API_KEYS_JSON={"public":"change-me"}
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_AUDIENCE=
JWT_ISSUER=

# Encryption
CONTENT_ENCRYPTION_KEY=

# Parser backend
PARSER_BACKEND=transformer
TRANSFORMER_INFERENCE_URL=http://127.0.0.1:8110/v1/infer/parse-turn
TRANSFORMER_TIMEOUT_SECONDS=5.0

# Graph backend
GRAPH_BACKEND=memory
NEO4J_URI=bolt://127.0.0.1:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
ELASTICSEARCH_URL=http://127.0.0.1:9200
ELASTICSEARCH_INDEX_NAME=opentree-evidence

# Event bus
EVENT_BUS_BACKEND=inmemory
EVENT_BUS_CONSUMER_GROUP=dialogue-service
REDIS_URL=redis://127.0.0.1:6379/0
REDIS_STREAM_PREFIX=opentree
ASYNC_PIPELINE_ENABLED=false
ASYNC_RETRY_MAX_ATTEMPTS=3
ASYNC_RETRY_BASE_DELAY_SECONDS=0.25
ASYNC_JOB_TTL_SECONDS=86400

# Persistence
SESSION_STORE_BACKEND=memory
JOB_STORE_BACKEND=memory
POSTGRES_DSN=dbname=opentree user=opentree password=opentree host=127.0.0.1 port=5432
